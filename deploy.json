{
    "machine": {
        "host": "$host",
        "username": "$username",
        "password": "$password"
    },
    "commands": [
        "sudo apt-get update",
        "curl -sL https://deb.nodesource.com/setup_7.x | sudo -E bash -",
        "sudo apt-get install -y nodejs",

        "npm --prefix /opt/redis-manager-service install",
        "docker stop redis-manager-service",
        "docker rm redis-manager-service",
        "docker stop redis-manager-db",
        "docker rm redis-manager-db",
        "docker build --no-cache -t redis-manager-service /docker-uploads/redis-manager-service",
        "docker run --name redis-manager-db -v /opt/redis-manager-db:/data/db -d mongo",
        "docker run -d -p 8080:3000 --name redis-manager-service --link redis-manager-db:mongo -v /logs:/logs -v /opt/redis-manager-service:/opt/redis-manager-service -t redis-manager-service"
    ],
    "directories": [
        {
            "source": "$workspace/src",
            "destination": "/opt/redis-manager-service/src"
        }
    ],
    "files": [
        {
            "source": "$workspace/package.json",
            "destination": "/opt/redis-manager-service/package.json"
        },
        {
            "source": "$workspace/Dockerfile",
            "destination": "/docker-uploads/redis-manager-service/Dockerfile"
        }
    ]
}